<h2>Edit Clinician</h2>

<br/>

<%= form_with(model: @clinician) do |f| %>
  <div class="row g-3">
    <div class="col-1">
      <%= f.label :suffix, "Suffix", class: "form-label" %>
      <%= f.text_field :suffix, class:"form-control" %>
    </div>
    <div class="col-4">
      <%= f.label :first_name, "First Name", class: "form-label" %>
      <%= f.text_field :first_name, class:"form-control" %>
    </div>
    <div class="col-md-2">
      <%= f.label :middle_name, "Middle Name", class: "form-label" %>
      <%= f.text_field :middle_name, class:"form-control" %>
    </div>
    <div class="col-md-4">
      <%= f.label :last_name, "Last name", class: "form-label" %>
      <%= f.text_field :last_name, class:"form-control" %>
    </div>
    <div class="col-1">
      <%= f.label :credential, "Credential", class: "form-label" %>
      <%= f.text_field :credential, class:"form-control" %>
    </div>
    <div class="col-md-3">
      <%= f.label :ind_PAC_ID, "Ind. PAC ID", class: "form-label" %>
      <%= f.text_field :ind_PAC_ID, class:"form-control" %>
    </div>
    <div class="col-md-3">
      <%= f.label :npi, "NPI", class: "form-label" %>
      <%= f.text_field :npi, class:"form-control" %>
    </div>
    <div class="col-md-6">
      <%= f.label :organization_id, "Organization", class: "form-label" %>
      <%= select("clinician", "organization_id", Organization.all.collect {|p| [ p.name, p.id ] }, {}, class: "form-select") %>
    </div>
    <div class="col-md-4">
      <%= f.label :medical_school, "Medical School", class: "form-label" %>
      <%= f.text_field :medical_school, class:"form-control" %>
    </div>
    <div class="col-md-4">
      <%= f.label :graduation_year, "Graduation Year", class: "form-label" %>
      <%= f.text_field :graduation_year, class:"form-control" %>
    </div>
    <div class="col-md-4">
      <%= f.label :primary_speciality, "Primary Speciality", class: "form-label" %>
      <%= f.text_field :primary_speciality, class:"form-control" %>
    </div>
    <div class="col-md-3">
      <%= f.label :secondary_speciality_1, "Secondary Specialty 1", class: "form-label" %>
      <%= f.text_field :secondary_speciality_1, class:"form-control" %>
    </div>
    <div class="col-md-3">
      <%= f.label :secondary_speciality_2, "Secondary Specialty 2", class: "form-label" %>
      <%= f.text_field :secondary_speciality_2, class:"form-control" %>
    </div>
    <div class="col-md-3">
      <%= f.label :secondary_speciality_3, "Secondary Specialty 3", class: "form-label" %>
      <%= f.text_field :secondary_speciality_3, class:"form-control" %>
    </div>
    <div class="col-md-3">
      <%= f.label :secondary_speciality_4, "Secondary Specialty 4", class: "form-label" %>
      <%= f.text_field :secondary_speciality_4, class:"form-control" %>
    </div>
    <div class="col-2">
      <%= f.submit "Edit Clinician", class: "btn btn-primary" %>
    </div>
    <div class="col-2">
      <%= link_to "Back", '/clinicians', class: "btn btn-secondary" %>
    </div>
  </div>
<% end %>