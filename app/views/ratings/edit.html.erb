<h2>Edit Rating</h2>

<br/>

<%= form_with(model: @rating) do |f| %>
  <div class="row g-3">
    <div class="col-md-6">
      <%= f.label :measure_cd, "Measure CD", class: "form-label" %>
      <%= f.text_field :measure_cd, class:"form-control" %>
    </div>
    <div class="col-md-6">
      <%= f.label :measure_title, "Measure Title", class: "form-label" %>
      <%= f.text_field :measure_title, class:"form-control" %>
    </div>
    <div class="col-md-6">
      <%= f.label :star_value, "Star Value", class: "form-label" %>
      <%= f.text_field :star_value, class:"form-control" %>
    </div>
    <div class="col-md-4">
      <%= f.label :facility_id, "Facility", class: "form-label" %>
      <%= select("rating", "facility_id", Facility.all.collect {|p| [ p.name, p.id ] }, {}, class: "form-control") %>
    </div>
    <div class="col-12">
      <%= f.submit "Edit rating", class: "btn btn-primary" %>
    </div>
      <%= link_to "Back", '/ratings', class: "" %>
    </div>
  </div>
<% end %>